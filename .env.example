# Database
DATABASE_URL=postgres://user:password@localhost:5432/userdb?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Server
PORT=3000
ENV=development
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=120s

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_EXPIRATION=1m

# CORS
CORS_ORIGINS=*